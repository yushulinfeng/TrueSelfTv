<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg"
    android:orientation="vertical">

    <org.out.yslf.trueselftv.views.MarqueeTextView
        android:id="@+id/main_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="3dp"
        android:singleLine="true"
        android:text="音乐"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <ScrollView
        android:id="@+id/main_scroll_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <TextView
            android:id="@+id/main_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="音乐文件不存在"
            android:textColor="#FFF"
            android:textSize="14sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_tv_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="45dp"
            android:paddingLeft="2dp"
            android:text="00:00"
            android:textColor="#FFF"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/main_pro_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/main_tv_pro_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="45dp"
            android:paddingRight="2dp"
            android:text="00:00"
            android:textColor="#FFF"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
